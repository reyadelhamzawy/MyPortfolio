@model Core.Entities.PortfolioItem

@{
    ViewData["Title"] = "Details";
}
<div class="container" style="padding-top:140px;padding-bottom:100px">

    <div>
        <h4>@Model.ProjectName</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ImageUrl)
            </dt>
            <dd class="col-sm-10">
                <img src="~/img/portfolio/@Model.ImageUrl" class="img-thumbnail" style="width:124px; height:100px" />
            </dd>
        </dl>
    </div>
    <div>
        <a asp-action="Edit" class="btn btn-dark" asp-route-id="@Model.Id">Edit <i class="fas fa-edit"></i></a> |
        <a asp-action="Index" class="btn btn-outline-dark">Back to List <i class="fas fa-step-backward"></i></a>
    </div>

</div>